{
                "compilerOptions": {
                "target": "esnext",
                "lib": [
                    "dom",
                    "dom.iterable",
                    "esnext"
                ],
                "baseUrl": "./",
                "allowJs": true,
                "skipLibCheck": true,
                "esModuleInterop": true,
                "allowSyntheticDefaultImports": true,
                "strict": true,
                "forceConsistentCasingInFileNames": true,
                "noFallthroughCasesInSwitch": true,
                "module": "esnext",
                "moduleResolution": "node",
                "resolveJsonModule": true,
                "isolatedModules": false,
                "sourceMap": true,
                "noEmit": true,
                "jsx": "react-jsx",
                },
                "include": [
                "src/**/*.ts",
                "src/**/*.tsx"
                ],
                "exclude": [
                "./node_modules/**/*",
                "./dist/**/*",
                "src/translateBpmnModeler/customTranslate.js",
                "**/*.stories.tsx"
                ]
            }